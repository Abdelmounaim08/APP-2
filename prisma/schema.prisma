// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}
model Question {
  question_id  Int       @id @default(autoincrement())
  content      String
  question_type String  // Utilisez String au lieu de QuestionType
  responses    Response[]
}



model Response {
  response_id  Int    @id @default(autoincrement())
  content      String
  question_id  Int
  response_type String 
  question     Question @relation(fields: [question_id], references: [question_id])
}

